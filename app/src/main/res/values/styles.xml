<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="Home_ImageView">
        <item name="android:layout_width">24px</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">24px</item>
        <item name="android:layout_marginLeft">6.7dp</item>
        <item name="android:src">@mipmap/rightarrow</item>
    </style>
    <style name="Home_TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">24px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">6.7dp</item>
        <item name="android:textColor">#898989</item>
        <item name="android:text">查看全部</item>
    </style>
    <style name="Home_View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#efefef</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_height">1dp</item>
    </style>
    <style name="Home_class">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">#121212</item>
        <item name="android:textSize">36px</item>
    </style>
    <style name="Home_LinearLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>


    <style name="Mine_Img">
        <item name="android:layout_width">29.3dp</item>
        <item name="android:layout_height">29.3dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">30px</item>
    </style>
    <style name="Mine_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">20px</item>
    </style>
    <style name="Mine_Imger">
        <item name="android:layout_width">50px</item>
        <item name="android:layout_height">50px</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">30px</item>
    </style>

</resources>
