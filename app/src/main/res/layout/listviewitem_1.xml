<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/audioimg"
        android:layout_width="146.7dp"
        android:layout_height="133.3dp"
        android:layout_marginBottom="13.3dp"
        android:layout_marginTop="13.3dp"
        android:layout_marginLeft="20dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"/>
   <TextView
       android:id="@+id/title1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="专题标题"
       android:textColor="#323232"
       android:layout_marginLeft="26.7dp"
       android:layout_alignParentTop="true"
       android:layout_toRightOf="@+id/audioimg"
       android:layout_toEndOf="@+id/audioimg"
       android:layout_marginStart="24dp"
       android:layout_marginTop="19dp"/>
    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="副标题"
        android:textColor="#808080"
        android:layout_marginTop="13.3dp"
        android:layout_below="@+id/title1"
        android:layout_alignLeft="@+id/title1"
        android:layout_alignStart="@+id/title1"/>
    <TextView
        android:id="@+id/free"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="堂课"
        android:textColor="#ffd300"
        android:layout_marginTop="20dp"
        android:layout_alignBottom="@+id/audioimg"
        android:layout_alignLeft="@+id/title2"
        android:layout_alignStart="@+id/title2"
        android:layout_marginBottom="27dp"/>
    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="音频"
        android:textColor="#bfbfbf"
        android:layout_alignBaseline="@+id/free"
        android:layout_alignBottom="@+id/free"
        android:layout_toRightOf="@+id/free"
        android:layout_toEndOf="@+id/free"/>



</com.zhy.autolayout.AutoRelativeLayout>