<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/in"
        layout="@layout/activity_base"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付金额"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/price_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥6.00"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textColor="#ff00"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <View style="@style/Home_View"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:text="选择支付方式"/>
    <View style="@style/Home_View"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:src="@mipmap/balanceappstore"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="苹果商店支付"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"/>
        <CheckBox
            android:id="@+id/check_apple_buy"
            android:layout_marginRight="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@null"
            android:background="@drawable/selet_yuan"
            android:layout_gravity="center"/>
    </LinearLayout>

    <View style="@style/Home_View"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/balanceremainder"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余额支付"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="余额支付：￥0.00"/>
        </LinearLayout>

        <CheckBox
            android:id="@+id/check_balance_buy"
            android:layout_marginRight="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@null"
            android:layout_gravity="center"
            android:background="@drawable/selet_yuan"/>
    </LinearLayout>
    <View style="@style/Home_View"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:text="余额不足"
            android:textColor="#e94b41"
            android:textSize="16dp"/>

        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/courserecharge"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <View style="@style/Home_View"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/balancewechat"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信支付"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"/>
        <CheckBox
            android:id="@+id/check_wx_buy"
            android:layout_marginRight="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@null"
            android:layout_gravity="center"
            android:background="@drawable/selet_yuan"/>
    </LinearLayout>

    <View style="@style/Home_View"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/balancealipay"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="支付宝支付"
            android:textSize="15dp"/>

        <CheckBox
            android:id="@+id/check_zfb_buy"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/selet_yuan"
            android:button="@null"/>
    </LinearLayout>

   <ImageView
       android:id="@+id/bt_sure_buy"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_marginTop="50dp"
       android:src="@mipmap/balanceconfirm"/>
</com.zhy.autolayout.AutoLinearLayout>